<?php

error_reporting (E_ALL & ~ E_NOTICE & ~ E_DEPRECATED);
function connect($banco="clime938_copreven",$usuario="clime938_copreve",$senha="copreven102030",$hostname="www.copreven.com.br"){

	// TENTA ESTABELECER A CONEXAO
	$connect = mysqli_connect($hostname,$usuario,$senha);
	// CONSEGUIU CONECTAR?
	if(!$connect){
		die(trigger_error("Nao foi possivel estabelecer a conexao"));
		return false;
	}else{
		//TENTA SELECIONAR BANCO DE DADOS
		$db= mysql_select_db($banco, $connect);
		//SELECIONOU O BANCO ?
		if(!$db){
			die(trigger_error("Nao foi possivel selecionar o banco"));
			return false;	
		}else{
			return $connect;
		}
	}
}

?>